datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  companyId String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  donations Donation[]
}

model Article {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Donation {
  id          Int      @id @default(autoincrement())
  amount      Float
  donorId     String   // Ubah tipe data dari Int menjadi String
  donor       User     @relation(fields: [donorId], references: [id]) // Relasi ke User
  createdAt   DateTime @default(now())
}